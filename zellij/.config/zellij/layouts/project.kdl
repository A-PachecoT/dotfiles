// Project Layout - Multiple tabs for organized workflow
// Tab 1: Dev (CC + Editor)
// Tab 2: Terminal (commands, builds)
// Tab 3: Git/Logs
//
// Usage:
//   zellij --layout project --session my-project

layout {
    // =========================================================================
    // TAB 1: Development
    // =========================================================================
    tab name="Dev" focus=true {
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
        pane split_direction="vertical" {
            pane size="40%" {
                command "claude"
                name "Claude Code"
            }
            pane size="60%" name="Editor"
        }
    }

    // =========================================================================
    // TAB 2: Terminal
    // =========================================================================
    tab name="Terminal" {
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
        pane split_direction="vertical" {
            pane size="50%" name="Commands"
            pane size="50%" name="Build/Run"
        }
    }

    // =========================================================================
    // TAB 3: Git & Logs
    // =========================================================================
    tab name="Git" {
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
        pane split_direction="vertical" {
            pane size="50%" {
                command "lazygit"
                name "Git"
            }
            pane size="50%" name="Logs"
        }
    }

    // Floating file browser
    floating_panes {
        pane {
            command "yazi"
            name "Files"
            width "60%"
            height "70%"
            x "20%"
            y "15%"
        }
    }
}
