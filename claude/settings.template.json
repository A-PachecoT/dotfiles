{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 __DOTFILES__/scripts/claude-block-dangerous.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "__DOTFILES__/scripts/claude-active set"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "__DOTFILES__/scripts/claude-active clear && __DOTFILES__/scripts/claude-notify stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "__DOTFILES__/scripts/claude-active clear && __DOTFILES__/scripts/claude-notify question"
          }
        ]
      }
    ]
  }
}
