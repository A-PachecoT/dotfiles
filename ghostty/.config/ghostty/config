# Ghostty Configuration
# Optimized for Claude Code power user workflow

# =============================================================================
# APPEARANCE
# =============================================================================

# Tokyo Night theme colors
background = 1a1b26
foreground = c0caf5
selection-background = 33467c
selection-foreground = c0caf5

# Palette (Tokyo Night)
palette = 0=#15161e
palette = 1=#f7768e
palette = 2=#9ece6a
palette = 3=#e0af68
palette = 4=#7aa2f7
palette = 5=#bb9af7
palette = 6=#7dcfff
palette = 7=#a9b1d6
palette = 8=#414868
palette = 9=#f7768e
