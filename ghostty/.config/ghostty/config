# =============================================================================
# BEHAVIOR
# =============================================================================

# Shell
command = /bin/zsh

# Scrollback (50k lines for verbose Claude output)
scrollback-limit = 50000

# Mouse
mouse-hide-while-typing = true
copy-on-select = clipboard

# Links - Cmd+click to open URLs
link-url = true

# macOS specific
macos-option-as-alt = true

# Confirm before closing with running processes
confirm-close-surface = false

# =============================================================================
# KEYBINDINGS - Vim Style Navigation
# =============================================================================

# tmux pane navigation (Cmd+hjkl sends Ctrl+b + key)
keybind = cmd+h=text:\x02h
keybind = cmd+j=text:\x02j
keybind = cmd+k=text:\x02k
keybind = cmd+l=text:\x02l

# tmux commands (Cmd sends Ctrl+b + key)
keybind = cmd+d=text:\x02d
keybind = cmd+z=text:\x02z
keybind = cmd+x=text:\x02x
# keybind = cmd+shift+d=text:\x02q  # Use native tmux: Ctrl+b q
keybind = cmd+w=unbind

# Split resize
keybind = cmd+ctrl+h=resize_split:left,20
keybind = cmd+ctrl+l=resize_split:right,20
keybind = cmd+ctrl+k=resize_split:up,20
keybind = cmd+ctrl+j=resize_split:down,20

# tmux window management (Cmd sends Ctrl+b + key)
keybind = cmd+c=text:\x02c
keybind = cmd+w=text:\x02w
keybind = cmd+r=unbind
keybind = cmd+r=text:\x02r
keybind = cmd+digit_1=unbind
keybind = cmd+digit_1=text:\x02\x31
keybind = cmd+digit_2=unbind
keybind = cmd+digit_2=text:\x02\x32
keybind = cmd+digit_3=unbind
keybind = cmd+digit_3=text:\x02\x33
keybind = cmd+digit_4=unbind
keybind = cmd+digit_4=text:\x02\x34
keybind = cmd+digit_5=unbind
keybind = cmd+digit_5=text:\x02\x35
keybind = cmd+digit_6=unbind
keybind = cmd+digit_6=text:\x02\x36
keybind = cmd+digit_7=unbind
keybind = cmd+digit_7=text:\x02\x37
keybind = cmd+digit_8=unbind
keybind = cmd+digit_8=text:\x02\x38
keybind = cmd+digit_9=unbind
keybind = cmd+digit_9=text:\x02\x39

# Smart open URLs/files (tmux-fingers) - sends prefix + F
keybind = cmd+f=unbind
keybind = cmd+f=text:\x02F

# Quick actions
keybind = cmd+shift+enter=toggle_split_zoom
keybind = cmd+enter=toggle_fullscreen

# Clear screen (Cmd+Shift+k to avoid conflict with tmux navigation)
keybind = cmd+shift+k=clear_screen

# =============================================================================
# CLIPBOARD & NOTIFICATIONS
# =============================================================================

# Clipboard (important for Claude Code image paste)
clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = false

# Desktop notifications (for knowing when Claude needs input)
desktop-notifications = true
